<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:WisftUI.Controls">

    <Design.PreviewWith>
        <Border Width="300" Height="300" Background="#CCCCCC">
            <controls:SquircleBorder Margin="100">
                <TextBlock
                    Foreground="{DynamicResource Text-Primary}"
                    Text="Good" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </controls:SquircleBorder>
        </Border>
    </Design.PreviewWith>

    <Style Selector="controls|SquircleBorder">
        <Setter Property="CornerRadius" Value="11" />
        <Setter Property="Smoothness" Value="0.27" />
    </Style>

</Styles>